<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="bshinfo-plugin-secure-key"
    version="1.0.0">

    <name>SecureKey</name>
    <author>GoDin Ryu</author>

    <description>
        return encript key and iv for AES.
    </description>

    <license>MIT</license>

    <keywords>keychain, encryption, security</keywords>

    <js-module src="www/SecureKey.js" name="SecureKey">
        <clobbers target="SecureKey" />
    </js-module>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SecureKey" >
                <param name="android-package" value="com.bshinfo.plugins.SecureKey"/>
            </feature>
        </config-file>
        <source-file src="src/android/SecureKey.java" target-dir="src/com/bshinfo/plugins/" />
    </platform>
</plugin>
